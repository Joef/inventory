{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    ".vscode",
    "node_modules",
    "**/node_modules",
    "**/lib",
    "**/dist",
    "**/__tests__",
    "**/stories"
  ]
}
